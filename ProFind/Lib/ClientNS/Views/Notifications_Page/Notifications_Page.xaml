            <StackPanel Margin="66,650,712,202">
                <TextBlock Text="Professional's Message" FontWeight="Bold" FontSize="22" Style="{ThemeResource TitleTextBlockStyle}" Margin="150,35,20,10"/>
                <TextBlock Text="Enabled banners, sounds"  FontSize="15" Margin="150,-5,20,10"/>
                <ToggleSwitch AutomationProperties.Name="simple ToggleSwitch" VerticalAlignment="Top" Height="38" Margin="550,-55,20,10"/>
