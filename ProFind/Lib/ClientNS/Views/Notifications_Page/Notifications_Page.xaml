            <TextBlock Text="Notifications and Actions" FontWeight="Bold" Margin="102,55,1095,913" FontSize="24" RenderTransformOrigin="0.5,-1.208" FocusVisualPrimaryBrush="{x:Null}" Style="{ThemeResource TitleTextBlockStyle}"/>
