<ContentDialog
    x:Class="ProFind.Lib.ClientNS.Views.CRUDPages.TagNS.ReadPage.ReadDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ProFind.Lib.ProfessionalNS.Views.CRUDPages.CurriculumNS.ReadPage"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:my="using:Syncfusion.Windows.PdfViewer"
    Title="Name of the tag"
    DefaultButton="Primary"
    IsSecondaryButtonEnabled="False"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    PrimaryButtonText="Ok"
    mc:Ignorable="d">

    <Grid Width="500" HorizontalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <muxc:ColorPicker Name="ColorSelector" />
        </StackPanel>
    </Grid>

</ContentDialog>
