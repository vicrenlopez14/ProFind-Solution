<Page
    x:Class="ProFind.Lib.AdminNS.Views.CRUDPages.ProjectNS.CreatePage.CreatePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">


    <Grid>
        <Grid>
            <ScrollViewer Grid.Column="1">
                <Grid>
                    <StackPanel Padding="100" Orientation="Vertical">
                        <TextBlock
                            FontWeight="Bold"
                            Style="{StaticResource HeaderTextBlockStyle}"
                            Text="Creation" />
                        <TextBlock>
                            Create a new project from zero.
                        </TextBlock>
                        <Image
                            x:Name="SelectedPicture_pp"
                            Width="100"
                            Height="100"
                            />
                        <StackPanel
                            Grid.Column="0"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal">
                            <ToggleButton
                                x:Name="PictureSelection_btn"
                                Grid.Column="0"
                                Width="150"
                                HorizontalAlignment="Left"
                                Checked="PictureSelection_btn_Checked"
                                Click="PictureSelection_btn_Click"
                                Content="Select a picture" />
                            <TextBlock
                                Name="SelectedPicture_tbk"
                                Margin="10,0,0,0"
                                VerticalAlignment="Center">
                                No picture selected
                            </TextBlock>
                        </StackPanel>
                        <TextBox
                            x:Name="Title_tb"
                            Margin="0,30,0,0"
                            PlaceholderText="Title"
                            TextChanged="Title_tb_TextChanged" />
                        <TextBox
                            x:Name="Description_tb"
                            Margin="0,15,0,0"
                            PlaceholderText="Description"
                            TextChanged="Description_tb_TextChanged" />
                        <muxc:NumberBox
                            x:Name="TotalPrice_tb"
                            Margin="0,15,0,0"
                            PlaceholderText="Total price"
                            ValueChanged="TotalPrice_tb_ValueChanged" />
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="433*" />
                                <ColumnDefinition Width="378*" />
                                <ColumnDefinition Width="57*"/>
                                <ColumnDefinition Width="433*" />
                            </Grid.ColumnDefinitions>
                            <ComboBox

                                Name="InitialStatus_cb"
                                Grid.Column="0"
                                Margin="0,20"
                                HorizontalAlignment="Center"
                                Header="Initial status"
                                SelectedIndex="0"
                                SelectionChanged="InitialStatus_cb_SelectionChanged" />
                            <StackPanel Grid.Column="1" Orientation="Vertical">
                                <TextBlock
                                   
                                    Margin="0,20"
                                    HorizontalAlignment="Center"
                                    d:Text="Selected professional" />
                                <ComboBox
                                   Margin="110,-20,0,0"
                            x:Name="Professional_cb"
                           
                            SelectedIndex="0"
                            SelectionChanged="Professional_cb_SelectionChanged" Width="162" />
                                <Button HorizontalAlignment="Center" Margin="20" Click="Button_Click">Select</Button>

                            </StackPanel>
                            <ComboBox
                                Name="Client_cb"
                                Grid.Column="1"
                                Margin="349,20,0,0"
                                Header="Client"
                                SelectedIndex="0"
                                SelectionChanged="Client_cb_SelectionChanged" Grid.ColumnSpan="3" Width="127" />


                        </Grid>
                        <Button
                            x:Name="Create_btn"
                            Width="100"
                            Click="Create_btn_Click"
                            Content="Create"
                            Style="{StaticResource AccentButtonStyle}" />



                        <Grid Margin="0,10,0,0" VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.7*" />
                                <ColumnDefinition Width="0.3*" />
                            </Grid.ColumnDefinitions>
                        </Grid>

                        <muxc:ProgressRing
                            x:Name="Creation_pr"
                            Margin="0,20,0,0"
                            IsActive="False" />
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Grid>

    </Grid>
</Page>
