<Page
    x:Class="ProFind.Lib.AdminNS.Views.CRUDPages.SecurityAnswerAdmins.ReadPage.ReadPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProFind.Lib.AdminNS.Views.CRUDPages.SecurityAnswerAdmins.ReadPage"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:models="using:ProFind.Lib.Global.Services"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel Margin="561,50,483,863">
            <TextBlock TextAlignment="Center" Text="Security answer" FontWeight="Bold"  Style="{StaticResource HeaderTextBlockStyle}" Width="432"/>
            <TextBlock Text="View your answers abour the questions security" Height="31" TextAlignment="Center"/>
        </StackPanel>

        <ListView
            Name="SecurityAnswerAdminListView"
            IsItemClickEnabled="True"
            SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:Securityansweradmin">
                    <StackPanel Margin="0,186,0,536" HorizontalAlignment="Center" Width="1087">
                        <StackPanel BorderBrush="Gray" BorderThickness="1" Orientation="Horizontal" Width="1000" Margin="0,0,0,20" Height="118">
                            <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                                <TextBlock Text="{x:Bind IdSq1Navigation.NameSq}" Margin="20,10,0,0" FontWeight="Bold" Width="787"/>
                                <TextBlock Text="{x:Bind AnswerSa}" Margin="20,1,0,0" Width="787"/>
                            </StackPanel>

                            <Button Name="btnUpdate" Content="Update" Margin="7,0,0,0" Style="{StaticResource AccentButtonStyle}" Click="btnUpdate_Click"/>
                            <Button Name="btnDelete" Content="Delete" Margin="30,0,0,0" Style="{StaticResource AccentButtonStyle}" Click="btnDelete_Click"/>
                        </StackPanel>

                        <StackPanel Margin="0,50,0,0" HorizontalAlignment="Center">
                            <Button Name="btnBack" Content="Back" Width="100" Style="{StaticResource ButtonStyle}" Click="btnBack_Click"/>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
