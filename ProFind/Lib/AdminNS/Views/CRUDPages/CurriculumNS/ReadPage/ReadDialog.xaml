<ContentDialog
    x:Class="ProFind.Lib.AdminNS.Views.CRUDPages.CurriculumNS.ReadPage.ReadDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ProFind.Lib.ProfessionalNS.Views.CRUDPages.CurriculumNS.ReadPage"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:my="using:Syncfusion.Windows.PdfViewer"
    Title="Curriculum Previewer"
    DefaultButton="Primary"
    IsSecondaryButtonEnabled="False"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    PrimaryButtonText="Ok"
    mc:Ignorable="d">

    <Grid
        Width="500"
        Height="500"
        HorizontalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.05*" />
            <ColumnDefinition Width="0.8*" />
            <ColumnDefinition Width="0.05*" />
        </Grid.ColumnDefinitions>
        <my:SfPdfViewerControl Name="PDFPreview" Grid.Column="1" />


    </Grid>

</ContentDialog>
