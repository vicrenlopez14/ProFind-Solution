<ContentDialog
    x:Class="ProFind.Lib.AdminNS.Views.CRUDPages.CurriculumNS.ReadPage.ReadDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ProFind.Lib.ProfessionalNS.Views.CRUDPages.CurriculumNS.ReadPage"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:my="using:Syncfusion.Windows.PdfViewer"
    Title="Curriculum reviewing"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick_1"
    PrimaryButtonText="Confirm"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick_1"
    SecondaryButtonText="Cancel"
    mc:Ignorable="d" Loaded="ContentDialog_Loaded_1">

    <Grid Width="500" HorizontalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.1*" />
            <ColumnDefinition Width="0.8*" />
            <ColumnDefinition Width="0.1*" />
        </Grid.ColumnDefinitions>
        <my:SfPdfViewerControl
            Name="PDFPreview"
            Grid.Column="0"
            Height="400" />
    </Grid>
</ContentDialog>
