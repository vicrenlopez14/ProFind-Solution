        <SymbolIcon Symbol="Library" RenderTransformOrigin="4.432,-0.983" Margin="31,372,1412,588" UseLayoutRounding="False" d:LayoutRounding="Auto">
            <SymbolIcon.RenderTransform>
                <CompositeTransform ScaleY="-1" Rotation="180.422" TranslateX="-453.639" TranslateY="-1.669"/>
            </SymbolIcon.RenderTransform>
        </SymbolIcon>
        <SymbolIcon Symbol="Mail" RenderTransformOrigin="4.432,-0.983" Margin="36,299,1408,661" UseLayoutRounding="False" d:LayoutRounding="Auto">
            <SymbolIcon.RenderTransform>
                <CompositeTransform ScaleY="-1" Rotation="180.422" TranslateX="-453.639" TranslateY="-1.669"/>
            </SymbolIcon.RenderTransform>
        </SymbolIcon>
        <SymbolIcon Symbol="Copy" RenderTransformOrigin="4.432,-0.983" Margin="580,80,864,880" UseLayoutRounding="False" d:LayoutRounding="Auto">
            <SymbolIcon.RenderTransform>
                <CompositeTransform ScaleY="-1" Rotation="180.422" TranslateX="-453.639" TranslateY="-1.669"/>
