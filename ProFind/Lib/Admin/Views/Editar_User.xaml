    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>

        <SymbolIcon Symbol="OtherUser" RenderTransformOrigin="4.432,-0.983" Margin="30,80,1413,880" UseLayoutRounding="False" d:LayoutRounding="Auto">
