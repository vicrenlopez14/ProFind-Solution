                <CompositeTransform ScaleY="-1" Rotation="180.422" TranslateX="-453.639" TranslateY="-1.669"/>
            </SymbolIcon.RenderTransform>
        </SymbolIcon>
        <SymbolIcon Symbol="Edit" RenderTransformOrigin="4.432,-0.983" Margin="30,228,1413,732" UseLayoutRounding="False" d:LayoutRounding="Auto">
