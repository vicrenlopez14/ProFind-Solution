<UserControl
    x:Class="ProFind.Lib.Admin.Views.Professionals_Page.Controls.ProfessionalTile"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ProFind.Lib.Admin.Views.Professionals_Page.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="600"
    Height="120"
    mc:Ignorable="d">

    <StackPanel Background="{ThemeResource ButtonBackgroundThemeBrush}" CornerRadius="15">
        <StackPanel
            Width="125"
            Height="22"
            Margin="10,10,-400,10"
            Background="#C5BC8C">
            <TextBlock
                FontWeight="Bold"
                Style="{ThemeResource BodyTextBlockStyle}"
                Text="General medicine"
                TextAlignment="Center" />
        </StackPanel>
        <TextBlock
            Margin="130,1"
            FontWeight="Bold"
            Style="{ThemeResource BodyTextBlockStyle}"
            Text="Professional:" />
        <TextBlock
            Margin="130,1"
            Style="{ThemeResource BodyTextBlockStyle}"
            Text="{Binding NameXD, Mode=TwoWay}" />
    </StackPanel>
</UserControl>
