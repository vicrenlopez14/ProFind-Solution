<Page
    x:Class="ProFind.Lib.Professional.Views.Main_Page.Main_Page_Professional"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ProFind.Lib.Professional.Views.Main_Page"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Loaded="Page_Loaded_1"
    mc:Ignorable="d">

    <Grid>
        <Grid.Resources>
            <AcrylicBrush
                x:Key="NavigationViewDefaultPaneBackground"
                BackgroundSource="HostBackdrop"
                FallbackColor="Black"
                TintColor="Gray"
                TintOpacity="0.6" />
        </Grid.Resources>
        <muxc:NavigationView
            Header="Bienvenido"
            IsBackButtonVisible="Collapsed"
            IsSettingsVisible="False"
            ItemInvoked="NavigationView_ItemInvoked"
            PaneDisplayMode="Left">
            <muxc:NavigationView.MenuItems>
                <muxc:NavigationViewItemHeader Content="ProFind.Work" />
                <muxc:NavigationViewItem
                    Content="Dashboard"
                    Icon="AllApps"
                    Tag="Dashboard_Page" />
                <muxc:NavigationViewItem
                    Content="Active processes"
                    Icon="People"
                    Tag="Processes_Page" />
                <muxc:NavigationViewItem Content="Notifications" Tag="Notifications_Page">
                    <muxc:NavigationViewItem.Icon>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE7BA;" />
                    </muxc:NavigationViewItem.Icon>
                </muxc:NavigationViewItem>
            </muxc:NavigationView.MenuItems>

            <Frame Name="Professionals_ContentFrame" Margin="58,24,24,24">
                <Frame.ContentTransitions>
                    <TransitionCollection>
                        <NavigationThemeTransition />
                    </TransitionCollection>
                </Frame.ContentTransitions>
            </Frame>

            <muxc:NavigationView.PaneFooter>
                <StackPanel Orientation="Vertical">
                    <NavigationViewItemHeader Content="Más" />
                    <NavigationViewItem
                        Content="Preferences"
                        Icon="Setting"
                        Tag="preferencias" />
                    <NavigationViewItem
                        Content="About"
                        Icon="People"
                        Tag="acercade" />
                </StackPanel>
            </muxc:NavigationView.PaneFooter>


        </muxc:NavigationView>
        <Button
            Margin="-533,-43,0,0"
            VerticalAlignment="Top"
            Content="Button" />
    </Grid>
</Page>
