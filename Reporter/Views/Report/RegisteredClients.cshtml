@{
    ViewData["Title"] = "Index";
}

@section styles {
    <link rel="stylesheet" href="@Url.Content("~/css/index.css")"/>
}

@*Reports available to generate*@
<div class="row">
    <div class="col-md-12">
        <h1>Reports</h1>
        <hr/>
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Registered professionals</h5>
                        <p class="card-text">Review the registered professionals at the moment.</p>
                        <a href="@Url.Action("RegisteredProfessionals", "Report")" class="btn btn-primary">Generate</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Registered clients</h5>
                        <p class="card-text">Review the registered clients at the moment.</p>
                        <a href="@Url.Action("RegisteredClients", "Report")" class="btn btn-primary">Generate</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Projects</h5>
                        <p class="card-text">Created projects and their details</p>
                        <a href="@Url.Action("CreatedProjects", "Report")" class="btn btn-primary">Generate</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>