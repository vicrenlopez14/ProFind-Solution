*@
@{
    ViewData["Title"] = "Index";
}

@section styles {
    <link rel="stylesheet" href="@Url.Content("~/css/index.css")"/>
}


@* List of professionals *@
<div class="container-fluid bg-dark text-light p-4">
    <!--    Title bar-->
    <div class="row">
        <div class="col-8">
            <h1>ProFind</h1>
            <h5>Reports portal</h5>
        </div>
        <div class="col-4">
            <ul class="text-secondary">
                <li>
                    Avenida Aguilares 218 San Salvador CP, 1101, SV
                </li>
                <li>
                    (503) 7852-2783
                </li>
                <li>
                    Profind@Gmail.com
                </li>
            </ul>
        </div>
    </div>
</div>

<div class="bg-dark p-3 m-4 text-light">
    ADMINISTRATORS
</div>
<div class="m-4">
    <button type="button" class="btn btn-danger" id="download">
        Download PDF
    </button>
</div>
<!-- Table that shoow the projoects -->
<table class="table table-striped table-hover m-4 p-3">
    <thead>
    <tr>
        <th scope="col">Picture</th>
        <th scope="col">Title</th>
        <th scope="col">Description</th>
        <th scope="col">Description</th>
        
        <th scope="col">Phone number</th>
        <th scope="col">Rank</th>
        <th scope="col">Action</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var project in (ViewData["projects"]! as List<Project>)!)
    {
        <tr>
            <th>
                <img style="width: 100px; height: auto;" src="data:image/png;base64, @project.PictureA" alt="@(project.NameA + "'s profile picture")"/>
            </th>
            <th scope="row">@project.NameA</th>
            <td>@project.EmailA</td>
            <td>@project.TelA</td>
            <td>@(project.IdR1Navigation?.NameR ?? "Undefined")</td>
            <td>
                <button type="button" class="btn btn-success">
                    <a class="text-light" style="text-decoration: none;" asp-action="AdminDetail" asp-route-id="@project.IdA">View</a>
                </button>
            </td>
        </tr>
    }
</table>

<div class="bg-dark text-light p-2 m-4 align-items-center">
    <b>
        <p>ADMINS REGISTERED</p>
    </b>
    <p>@((ViewData["admins"]! as List<Admin>).Count)</p>
</div>