@{
    ViewData["Title"] = "Index";
}

@section styles {
    <link rel="stylesheet" href="@Url.Content("~/css/index.css")"/>
}


@* List of professionals *@
<div class="container-fluid bg-dark text-light p-4">
    <!--    Title bar-->
    <div class="row">
        <div class="col-8">
            <img src="~/img/profind-logo-dark-surface.png" width="350" alt="Logo"/>
            <h5>Reports portal</h5>
        </div>
        <div class="col-4">
            <ul class="text-secondary">
                <li>
                    Avenida Aguilares 218 San Salvador CP, 1101, SV
                </li>
                <li>
                    (503) 7852-2783
                </li>
                <li>
                    Profind@Gmail.com
                </li>
            </ul>
        </div>
    </div>
</div>

<div class="bg-dark p-3 m-4 text-light">
    PROJECTS
</div>
<div class="m-4">
    <button type="button" class="btn btn-danger" id="download">
        Download PDF
    </button>
</div>
<!-- Table that shoow the projoects -->
<table class="table table-striped table-hover m-4 p-3">
    <thead>
    <tr>
        <th scope="col">Picture</th>
        <th scope="col">Title</th>
        <th scope="col">Description</th>
        <th scope="col">Start Date</th>
        <th scope="col">End Date</th>
        <th scope="col">Total Price</th>
        <th scope="col">Is paid</th>
        <th scope="col">Â¿Marked as complete?</th>
        <th scope="col">Tag - Duration</th>
        <th scope="col">Professional</th>
        <th scope="col">Client</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var project in (ViewData["projects"]! as List<Project>)!)
    {
        <tr>
            <th>
                <img style="width: 100px; height: auto;" src="data:image/png;base64, @project.PicturePj" alt="@(project.TitlePj + "'s project picture")"/>
            </th>
            <th scope="row">@project.TitlePj</th>
            <td>@project.DescriptionPj</td>
            <td>@project.StartDate.Value.Date.ToString()</td>
            <td>@project.EndDate.Value.Date.ToString()</td>
            <td>@project.TotalPricePj.Value.ToString()</td>
            <td>@project.IsPaidPj.Value ? "Yes" : "No"</td>
            <td>@project.TagDurationPj.ToString()</td>
            <td>@project.IdP1Navigation.NameP</td>
            <td>@project.IdC1Navigation.NameC</td>
        </tr>
    }
</table>

<div class="bg-dark text-light p-2 m-4 align-items-center">
    <b>
        <p>PROJECTS CREATED</p>
    </b>
    <p>@((ViewData["projects"]! as List<Project>).Count)</p>
</div>